<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Subject</th>
      <th>Classroom</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Days</th>
      <th>Students</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.teacher_subject.teacher.first_name %> <%= section.teacher_subject.teacher.last_name %></td>
        <td><%= section.teacher_subject.subject.name %></td>
        <td><%= section.classroom.name %></td>
        <td><%= section.start_time.strftime("%I:%M %p") %></td>
        <td style='width: 150px;'><%= section.end_time.strftime("%I:%M %p") %></td>
        <td><%= section.days %></td>
        <td><%= section.students.map(&:first_and_last_name).join(',') %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path %>
